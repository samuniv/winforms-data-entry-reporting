<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <connectionStrings>
    <add name="DefaultConnection" 
         connectionString="Data Source=data.db" 
         providerName="Microsoft.Data.Sqlite" />
  </connectionStrings>
  
  <appSettings>
    <!-- Application settings -->
    <add key="DefaultTheme" value="Light" />
    <add key="DefaultExportPath" value="C:\Temp\Reports" />
    <add key="BackupPath" value="C:\Temp\Backups" />
  </appSettings>
  
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
  </startup>
</configuration>
